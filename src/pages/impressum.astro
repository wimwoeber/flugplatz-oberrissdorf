---
import Layout from '../layouts/Layout.astro';
import impressum from '../content/impressum.json';
---

<Layout title="Impressum" description="Impressum des Flugplatz OberriÃŸdorf / Luftfahrtverein Mansfelder Land e.V.">
  <section class="bg-primary text-white py-16 sm:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold">Impressum</h1>
    </div>
  </section>

  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div id="impressum-content" class="bg-white rounded-xl shadow-md p-6 sm:p-10 prose max-w-none" set:html={impressum.inhalt} />
  </div>

  <script>
    (async () => {
      try {
        const res = await fetch('/data/impressum.json');
        if (!res.ok) return;
        const data = await res.json();
        const el = document.getElementById('impressum-content');
        if (el && data.inhalt) el.innerHTML = data.inhalt;
      } catch (e) {}
    })();
  </script>
</Layout>
